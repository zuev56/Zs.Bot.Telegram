  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <RootNamespace>Zs.Bot.Telegram</RootNamespace>
    <Nullable>enable</Nullable>
    <EnforceCodeStyleInBuild>True</EnforceCodeStyleInBuild>
    <PackageId>Zs.Bot.Telegram</PackageId>
    <Version>7.1.1</Version>
    <Authors>zuev56 (Sergei Zuev)</Authors>
    <Company>zuev56 (Sergei Zuev)</Company>
    <RepositoryUrl>https://github.com/zuev56/Zs.Bot.Telegram</RepositoryUrl>
    <PackageProjectUrl>https://www.nuget.org/packages/Zs.Bot.Telegram</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Telegram.Bot" Version="19.0.0" />
